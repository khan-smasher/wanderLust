<% layout("./layouts/boilerplate.ejs") %>

<section class="text-center mt-5 fade-in-zoom">
  <h1 class="display-4 text-danger fw-bold">Welcome to WanderLust</h1>
  <p class="lead">Your gateway to unique stays and unforgettable travel experiences</p>

  <div class="container mt-5">
    <div class="row g-4">
      <div class="col-md-4 delay-1">
        <div class="feature-card fade-in-up">
          <i class="fas fa-map-marked-alt fa-2x text-danger mb-2"></i>
          <h5>Interactive Maps</h5>
          <p>Explore listings by location with built-in Google Maps integration.</p>
        </div>
      </div>

      <div class="col-md-4 delay-2">
        <div class="feature-card fade-in-up">
          <i class="fas fa-image fa-2x text-danger mb-2"></i>
          <h5>Photo Uploads</h5>
          <p>Upload images to showcase your space using Cloudinary.</p>
        </div>
      </div>

      <div class="col-md-4 delay-3">
        <div class="feature-card fade-in-up">
          <i class="fas fa-comments fa-2x text-danger mb-2"></i>
          <h5>Reviews</h5>
          <p>Share your experience or read reviews from others before booking.</p>
        </div>
      </div>
    </div>

    <div class="row mt-4 g-4">
      <div class="col-md-4 delay-1">
        <div class="feature-card fade-in-up">
          <i class="fas fa-plus-circle fa-2x text-danger mb-2"></i>
          <h5>Create Listings</h5>
          <p>Become a host by listing your property with ease.</p>
        </div>
      </div>

      <div class="col-md-4 delay-2">
        <div class="feature-card fade-in-up">
          <i class="fas fa-lock fa-2x text-danger mb-2"></i>
          <h5>Authorization</h5>
          <p>Only you can edit or delete your listings and reviews.</p>
        </div>
      </div>

      <div class="col-md-4 delay-3">
        <div class="feature-card fade-in-up">
          <i class="fas fa-user-plus fa-2x text-danger mb-2"></i>
          <h5>Simple Signup</h5>
          <p>Create an account to access all features instantly.</p>
        </div>
      </div>
    </div>

    <a href="/listings" class="btn btn-danger mt-5 px-4 py-2 fs-5 mb-3 fade-in-up delay-3">
      Start Exploring
    </a>
  </div>
</section>
