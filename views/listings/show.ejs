<% layout("./layouts/boilerplate.ejs") %>

<!-- Main container row -->
<div class="row">
  
  <!-- Title of the listing -->
  <div class="col-8 offset-3">
    <h3><%= listing.title %></h3>
  </div>

  <!-- Card for listing details -->
  <div class="card col-6 offset-3 show-card All Reviews">
    
    <!-- Listing Image -->
    <img
      src="<%= listing.image %>"
      class="card-img-top show-img"
      alt="listing_image"
    />

    <!-- Listing description, price, location, and country -->
    <div class="card-body">
      <p class="card-text">
        <%= listing.description %> <br />
        &#8377; <%= listing.price.toLocaleString("en-IN") %> <br />
        <%= listing.location %> <br />
        <%= listing.country %> <br />
      </p>
    </div>
  </div>

  <!-- Edit and Delete buttons -->
  <div class="btns offset-1">
    
    <!-- Edit button -->
    <a
      href="/api/v1/listings/<%= listing._id %>/edit"
      class="btn btn-dark col-1 offset-2 edit-btn"
    >
      Edit
    </a>

    <!-- Delete button using method-override -->
    <form
      action="/api/v1/listings/<%= listing._id %>?_method=DELETE"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <button class="btn btn-dark offset-4">Delete</button>
    </form>
  </div>

  <!-- Review section -->
  <div class="col-8 offset-3 mb-3 mt-3">
    <hr />
    <h4>Leave a Review</h4>

    <!-- Form to submit a new review -->
    <form action="/api/v1/listings/<%= listing._id %>/reviews" method="POST">
      
      <!-- Rating input (1 to 5 stars) -->
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input
          type="range"
          min="1"
          max="5"
          id="rating"
          name="review[rating]"
          class="form-range"
        />
      </div>

      <!-- Comment input -->
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea
          name="review[comment]"
          id="comment"
          cols="30"
          rows="10"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please add some comments for review</div>
      </div>

      <!-- Submit button for review -->
      <button class="btn btn-outline-dark">Submit</button>
    </form>

    <hr />

    <!-- Display all reviews -->
    <p><b>All Reviews</b></p>
    <div class="row">

      <!-- Loop through each review and show details -->
      <% for (review of listing.reviews) { %>
        <div class="card col-5 ms-3 mb-3">
          <div class="card-body">
            <h5 class="card-title">User</h5>
            <p class="card-text"><%= review.comment %></p>
            <p class="card-text"><%= review.rating %> Stars</p>
          </div>

          <!-- Delete button for each review -->
          <form action="/api/v1/listings/<%= listing._id %>/reviews/<%= review._id %>" method="POST">
            <button class="btn btn-sm btn-dark">Delete</button>
          </form>
        </div>
      <% } %>
    </div>
  </div>
</div>
