<% layout("./layouts/boilerplate.ejs") %>
<div class="row">
  <div class="col-8 offset-3">
    <h3>Listing Details:</h3>
  </div>
  <div class="card col-6 offset-3 show-card">
    <img
      src="<%= listing.image %>"
      class="card-img-top show-img"
      alt="listing_image"
    />
    <div class="card-body">
      <p class="card-text">
        <b> <%= listing.title %> </b> <br />
        <%= listing.description %> <br />
        &#8377; <%= listing.price.toLocaleString("en-IN") %> <br />
        <%= listing.location %> <br />
        <%= listing.country %> <br />
      </p>
    </div>
  </div>

  <br />
  <br />
  <div class="btns offset-1">
    <a href="/api/v1/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-2 edit-btn"
      >Edit</a
    >

    <form
      action="/api/v1/listings/<%= listing._id %>?_method=DELETE"
      method="POST"
    >
      <button class="btn btn-dark offset-4">Delete</button>
    </form>
  </div>
</div>
