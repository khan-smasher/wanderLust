<% layout("layouts/boilerplate.ejs") %>

<h3 class="mb-4 fade-in-up">All Listings</h3>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
  <% let delay = 0; %>
  <% for (let listing of allListings) { %>
    <a href="/listings/<%= listing.id %>" class="listing-link">
      <div class="card col listing-card fade-in-zoom" style="animation-delay: 200ms">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="Listing image"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b> <br />
            &#8377;<%= listing.price.toLocaleString("en-IN") %>
          </p>
        </div>
      </div>
    </a>
    <% delay += 0.1; %> <!-- gradually increase animation delay -->
  <% } %>
</div>
