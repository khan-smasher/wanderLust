    <div><i class="fa-solid fa-snowflake"></i></div>
    <p>Snowy</p>
  </a>

  <!-- Price toggle -->
  <div class="filter" onclick="togglePriceDropdown()">
    <div><i class="fa-solid fa-tag"></i></div>
    <p>Price</p>
  </div>
</div>

<!-- Hidden dropdown -->
<div id="priceDropdown" class="ms-4 mb-3">
  <form class="d-flex align-items-center mt-2" action="/listings/search" method="GET">
    <label for="price" class="me-2">₹:</label>
    <select name="price" id="price" class="form-select w-auto me-2">
      <option value="">Any</option>
      <option value="0-1000">₹0–₹1,000</option>
      <option value="1000-5000">₹1,000–₹5,000</option>
      <option value="5000-1000000">₹5,000+</option>
    </select>
    <button type="submit" class="btn btn-outline-dark">Apply</button>
  </form>
</div>

<script>
  function togglePriceDropdown() {
    const dropdown = document.getElementById("priceDropdown");
    dropdown.style.display = dropdown.style.display === "none" ? "block" : "none";
  }
</script>
